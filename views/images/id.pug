extends ../layout.pug

block content
  -var hexColor = `text-[${image.dominantColor}]`
  section.grid.justify-around.my-8
    img(src="/storage/" + image.filename, alt=image.title)
    h1.title= image.title
    p.card-description= image.description
    footer.card-footer
      .flex.items-center.my-2
        p.card-color-text= `Color dominante: ${image.dominantColor}`
        .card-color(style=`background-color: ${image.dominantColor};`)
      p.card-date= image.publishedAt
